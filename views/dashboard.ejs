<!DOCTYPE html>
<html lang="en">

  <head>
    <title>BTC - Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/stylesheets/dashboard.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/public/javascripts/dashboard.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dashboard">Book Trading Club</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li class="active">
              <a href="/dashboard">Dashboard</a>
            </li>
            <li>
              <a href="/dashboard/mybooks">My Books</a>
            </li>
            <li>
              <a href="/dashboard/reqByMe">Requested by Me</a>
            </li>
            <li>
              <a href="/dashboard/reqToMe">Requested to Me</a>
            </li>
            <li>
              <a href="/dashboard/myProfile">My Profile</a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/logout">
                <span class="glyphicon glyphicon-log-in"></span> Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="jumbotron dashboard-title">
      <div class="container text-center">
        <h1 id="dashboard-page-title">Dashboard</h1>
        <p></p>
      </div>
    </div>

    <div id="books-container">
      <% if(books.length <= 0) { %>
        <div class="text-center empty-books">Sorry, no books here! :(</div>
      <% } %>
      <% books.forEach(function(book, i) { %>
        <div class="col-sm-3 book-container" id="<%= book.copy %>">
          <img src="<%= book.bUrl %>" class="img-responsive book-img" style="width:100%" alt="Image">
          <h3 class="book-title">
            <%=book.title%>
          </h3>
          <h4 class="text-center">
            <%=book.author%>
          </h4>
          <p class="text-center price">$
            <%=book.bPrice.toFixed(2)%>
          </p>
          <div class="text-center">
            <a class="btn btn-primary" onclick="trade(<%= book.copy %>)">Trade</a>
          </div>
        </div>
      <% }); %>
    </div>

    <footer class="container-fluid text-center footer">
      <p>Copyright Â© Book Trading Club 2018</p>
    </footer>

  </body>

</html>